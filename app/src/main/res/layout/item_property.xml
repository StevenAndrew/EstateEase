<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/item_property_content_marginBottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/border"
        android:orientation="vertical"

        android:padding="@dimen/item_property_content_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_property_image"
            android:layout_width="370dp"
            android:layout_height="211dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border"
            android:contentDescription="@string/image_contentDescription"
            android:src="@drawable/add_screen_image_placeholder"
            app:civ_border_color="@color/primary_text_color"
            app:civ_border_width="@dimen/item_property_image_border_width" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_property_name_layout_marginStart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/item_property_name_text_size"
                tools:text="Property Name:"/>

            <TextView
                android:id="@+id/tv_property_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                />

            <TextView
                android:id="@+id/tv_property_created_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Owner: "/>
        </LinearLayout>

    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_property_divider_height"
        android:layout_marginTop="@dimen/item_property_divider_marginTop"
        android:background="@color/white"/>

</LinearLayout>