<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/item_property_content_marginBottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/border"
        android:orientation="vertical"

        android:padding="@dimen/item_property_content_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_meeting_image"
            android:layout_width="370dp"
            android:layout_height="211dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/border"
            android:contentDescription="@string/image_contentDescription"
            android:src="@drawable/add_screen_image_placeholder"
            app:civ_border_color="@color/primary_text_color"
            app:civ_border_width="@dimen/item_property_image_border_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_property_name_layout_marginStart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_meeting_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/item_property_name_text_size"
                tools:text="Property Name:"/>

            <TextView
                android:id="@+id/tv_meeting_created_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Meeting Recipient: "/>

            <TextView
                android:id="@+id/tv_meeting_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Meeting Location: "/>

            <TextView
                android:id="@+id/tv_meeting_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Date: "/>

            <TextView
                android:id="@+id/tv_meeting_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Time: "/>

            <TextView
                android:id="@+id/tv_meeting_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_property_created_by_text_size"
                tools:text="Status: "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_accept_meeting"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_button_rounded"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/btn_paddingTopBottom"
                android:paddingBottom="@dimen/btn_paddingTopBottom"
                android:gravity="center"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textSize="@dimen/btn_text_size"
                android:visibility="gone"/>

            <View
                android:layout_width="30dp"
                android:layout_height="@dimen/nav_divider_height"
                android:background="@color/white" />

            <Button
                android:id="@+id/btn_decline_meeting"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/delete_button_rounded"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="@dimen/btn_paddingTopBottom"
                android:paddingBottom="@dimen/btn_paddingTopBottom"
                android:gravity="center"
                android:text="Decline"
                android:textColor="@android:color/white"
                android:textSize="@dimen/btn_text_size"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_property_divider_height"
        android:layout_marginTop="@dimen/item_property_divider_marginTop"
        android:background="@color/white"/>

</LinearLayout>