<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainUI.MeetingViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_meeting_view_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/nav_header_main_background"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/intro_background"
        android:paddingBottom="@dimen/my_profile_screen_content_padding"
        android:paddingLeft="@dimen/my_profile_screen_content_padding"
        android:paddingRight="@dimen/my_profile_screen_content_padding">

        <ImageView
            android:id="@+id/iv_meeting_details_image"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:contentDescription="@string/image_contentDescription"
            android:src="@drawable/add_screen_image_placeholder"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/property_meet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_profile_name_til_marginTop"
            android:hint="Property: "
            android:textSize="@dimen/et_text_size"/>

        <TextView
            android:id="@+id/meeting_view_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_profile_name_til_marginTop"
            android:hint="Meeting Location: "
            android:textSize="@dimen/et_text_size"/>

        <TextView
            android:id="@+id/meeting_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_profile_name_til_marginTop"
            android:hint="Date: "
            android:textSize="@dimen/et_text_size"/>

        <TextView
            android:id="@+id/meeting_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/my_profile_name_til_marginTop"
            android:hint="Time: "
            android:textSize="@dimen/et_text_size"/>

        <Button
            android:id="@+id/btn_open_in_maps_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/my_profile_btn_update_marginTop"
            android:background="@drawable/shape_button_rounded"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/btn_paddingTopBottom"
            android:paddingBottom="@dimen/btn_paddingTopBottom"
            android:text="@string/open_in_maps"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size" />

        <Button
            android:id="@+id/btn_view_reschedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/my_profile_btn_update_marginTop"
            android:background="@drawable/edit_button_rounded"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="@dimen/btn_paddingTopBottom"
            android:paddingBottom="@dimen/btn_paddingTopBottom"
            android:text="Reschedule"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btn_text_size"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>